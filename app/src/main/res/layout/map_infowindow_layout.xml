<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="349dp"
        android:layout_height="78dp">

        <TextView
            android:id="@+id/info_item_address"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/n_a"
            app:layout_constraintStart_toEndOf="@+id/info_item_restaurantLogo"
            app:layout_constraintTop_toBottomOf="@+id/info_item_restaurantName" />

        <ImageView
            android:id="@+id/info_item_restaurantLogo"
            android:layout_width="72dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_item_restaurantName"
            android:layout_width="195dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="N/A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/info_item_restaurantLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/info_item_hazardImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_item_lastInspection"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="@string/no_inspection_data_available"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/info_item_address"
            app:layout_constraintTop_toBottomOf="@+id/info_item_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
