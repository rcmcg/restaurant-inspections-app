<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/restaurant_item_imgRestaurantIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        app:srcCompat="@drawable/restaurant_icon_clipart" />

    <TextView
        android:id="@+id/restaurant_item_txtRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/restaurant_item_imgRestaurantIcon"
        android:text="Restaurant Name Shown Here" />

    <ImageView
        android:id="@+id/restaurant_item_imgHazardIcon"
        android:layout_width="74dp"
        android:layout_height="60dp"
        android:layout_below="@+id/restaurant_item_txtRestaurantName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/restaurant_item_imgRestaurantIcon"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/restaurant_item_txtLastInspectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_item_txtRestaurantName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/restaurant_item_imgHazardIcon"
        android:text="Last Inspection Date Here" />

    <TextView
        android:id="@+id/restaurant_item_txtNumViolations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_item_txtLastInspectionDate"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/restaurant_item_imgHazardIcon"
        android:text="# of Violations Here" />

</RelativeLayout>
