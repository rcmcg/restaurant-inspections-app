<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/restaurant_item_imgRestaurantIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:minWidth="100dp"
        android:minHeight="100dp"
        app:srcCompat="@drawable/restaurant_icon_clipart" />

    <TextView
        android:id="@+id/restaurant_item_txtRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/restaurant_item_imgRestaurantIcon"
        android:fontFamily="@font/roboto_bold"
        android:text="Restaurant Name Here"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/restaurant_item_imgHazardRating"
        android:adjustViewBounds="true"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_below="@+id/restaurant_item_txtRestaurantName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/restaurant_item_imgRestaurantIcon"
        android:maxWidth="68dp"
        android:maxHeight="68dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/restaurant_item_txtLastInspectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_item_txtRestaurantName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/restaurant_item_imgHazardRating"
        android:fontFamily="@font/roboto_light"
        android:text="Last Inspection"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/restaurant_item_txtNumViolations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_item_txtLastInspectionDate"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/restaurant_item_imgHazardRating"
        android:fontFamily="@font/roboto_light"
        android:text="# of Violations Here"
        android:textSize="18sp" />

</RelativeLayout>
